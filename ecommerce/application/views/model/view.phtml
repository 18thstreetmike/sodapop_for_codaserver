<page>
	<form action="<?= $this->baseUrl ?>/<?= $this->controller ?>/update" method="post">
	<h3><?= $this->actionName ?> <?= $this->entityName ?></h3>
	<pre><?= var_export($this->form) ?></pre>
	<?php foreach ($this->form['groups'] as $group) { ?>
		<?php if ($group['showFieldset']) { ?>
			<fieldset>
				<?php if (isset($group['label'])) { ?><legend><?= $group['label'] ?></legend><?php } ?>
		<?php } ?>
	
		<?php if ($group['showFieldset']) { ?>
			</fieldset>
		<?php } ?>
	<?php } ?>
	<?php if (count($this->actions) > 0) { ?>
	<actionbuttons>
		<?php foreach ($this->actions as $action) { ?>
			<?php foreach ($action as $link => $label) { ?>
			<listbutton label="<?= $label ?>" link="<?= $this->baseUrl.'/'.$link ?>" />
			<?php } ?>
		<?php } ?>
	</actionbuttons>
	<?php } ?>
	</form>
</page>